@model EPM.Core.EmployeeManagement.Employee
<div class="container">
    <div class="panel">
        <div class="panel-header">
            Create Employee
        </div>
        <div class="panel-body">
            <form asp-controller="Employee" asp-action="CreateEmployee">
                <div class="col-md-auto">
                    <div class="form-group col-md-3">
                        <input type="hidden" asp-for="Id" />
                        <label asp-for="Name">Name:</label>
                        <input type="text" class="form-control" asp-for="Name" placeholder="Enter Name">
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group col-md-3">
                        <label for="email">Email:</label>
                        <input class="form-control" asp-for="Email" placeholder="Enter email address">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-3">
                        <label asp-for="Phone">Phone:</label>
                        <input class="form-control" asp-for="Phone" placeholder="Enter Phone number">
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-3">
                        <label asp-for="EmpCode">Employee Code:</label>
                        <input class="form-control" asp-for="EmpCode" placeholder="Enter employee code">
                        <span asp-validation-for="EmpCode" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary float-right">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>